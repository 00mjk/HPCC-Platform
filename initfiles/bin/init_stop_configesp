PATH_PRE=`type -path hpcc_setenv`
source ${PATH_PRE}
PID_NAME="$PID/`basename $PWD`.pid"

INIT_PID_NAME="$PID/init_`basename $PWD`.pid"
echo $$ > $INIT_PID_NAME

if [ -e configesp_sentinel.txt ]; then

    rm -f configesp_sentinel.txt
        if [ -e ${PID_NAME} ]; then
                pidwait_fn `cat ${PID_NAME}` 3
        fi
fi


